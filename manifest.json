{
    "name": "JBNU 새탭",
    "description": "성실한 전북대 학생을 위한 새탭 extension",
    "homepage_url": "https://github.com/kimhyun5u/jbnu-newtab",
    "version": "1.1.1",
    "manifest_version": 3,
    "background": {
      "service_worker": "src/background.js",
      "type": "module"
    },
    "permissions": [
        "storage",
        "notifications",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "chrome_url_overrides": {
        "newtab": "src/index.html"
    },
    "icons": {
      "16": "./assets/images/symbol.png",
      "32": "./assets/images/symbol.png",
      "48": "./assets/images/symbol.png",
      "128": "./assets/images/symbol.png"
    }
}